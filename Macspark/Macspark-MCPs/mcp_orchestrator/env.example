# =============================================================================
# MCP Orchestrator - Variáveis de Ambiente
# =============================================================================
# 
# Copie este arquivo para .env e configure as variáveis conforme necessário.
# As variáveis marcadas como (OPCIONAL) podem ser deixadas em branco.
#
# IMPORTANTE: Nunca commite o arquivo .env no Git!
# =============================================================================

# =============================================================================
# CHAVES DE API (OPCIONAL)
# =============================================================================

# Claude API (Anthropic)
# Obtenha em: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# Google AI (Gemini)
# Obtenha em: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY="AIza..."

# OpenAI API
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Mistral AI
# Obtenha em: https://console.mistral.ai/
MISTRAL_API_KEY="..."

# Cohere API
# Obtenha em: https://dashboard.cohere.ai/
COHERE_API_KEY="..."

# Perplexity API
# Obtenha em: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY="pplx-..."

# =============================================================================
# LLMs LOCAIS (OPCIONAL)
# =============================================================================

# Ollama - URL base do servidor Ollama
# Padrão: http://localhost:11434
OLLAMA_BASE_URL="http://localhost:11434"

# LM Studio - URL base do servidor LM Studio
# Padrão: http://localhost:1234/v1
LM_STUDIO_BASE_URL="http://localhost:1234/v1"

# =============================================================================
# CONFIGURAÇÕES DO SERVIDOR
# =============================================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Timeout padrão para requisições (em segundos)
TIMEOUT=30

# Número máximo de tentativas de retry
MAX_RETRIES=3

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Comprimento máximo do prompt (caracteres)
MAX_PROMPT_LENGTH=10000

# Comprimento máximo da resposta (caracteres)
MAX_RESPONSE_LENGTH=50000

# Rate limiting - requisições por minuto
RATE_LIMIT_PER_MINUTE=60

# Habilitar rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Sanitizar entradas (true/false)
SANITIZE_INPUTS=true

# =============================================================================
# CONFIGURAÇÕES DE CACHE
# =============================================================================

# Habilitar cache de respostas (true/false)
ENABLE_CACHE=true

# TTL do cache em segundos (1 hora = 3600)
CACHE_TTL=3600

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

# Habilitar métricas Prometheus (true/false)
ENABLE_METRICS=true

# Intervalo de health check (em segundos)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# CONFIGURAÇÕES DE CUSTO
# =============================================================================

# Orçamento mensal em USD
MONTHLY_BUDGET=50.0

# Habilitar otimização de custo (true/false)
ENABLE_COST_OPTIMIZATION=true

# Priorizar agentes gratuitos (true/false)
PREFER_FREE_AGENTS=true

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================

# Habilitar logs em JSON (true/false)
ENABLE_JSON_LOGS=false

# Habilitar logs no console (true/false)
ENABLE_CONSOLE_LOGS=true

# Arquivo de log principal
LOG_FILE="logs/mcp_orchestrator.log"

# Arquivo de log de erros
ERROR_LOG_FILE="logs/errors.log"

# =============================================================================
# CONFIGURAÇÕES DE FALLBACK
# =============================================================================

# Número máximo de tentativas de fallback
MAX_FALLBACK_ATTEMPTS=3

# Delay entre tentativas de fallback (em segundos)
FALLBACK_DELAY=1.0

# =============================================================================
# CONFIGURAÇÕES DE DOCKER (se aplicável)
# =============================================================================

# Senha do Grafana (para Docker Compose)
GRAFANA_PASSWORD="admin"

# =============================================================================
# CONFIGURAÇÕES AVANÇADAS
# =============================================================================

# Habilitar debug detalhado (true/false)
DEBUG=false

# Habilitar profiling (true/false)
ENABLE_PROFILING=false

# Habilitar validação de entrada estrita (true/false)
STRICT_VALIDATION=true

# Habilitar compressão de respostas (true/false)
ENABLE_COMPRESSION=true

# =============================================================================
# CONFIGURAÇÕES DE REDE
# =============================================================================

# Host para binding do servidor
HOST="0.0.0.0"

# Porta do servidor
PORT=8000

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Habilitar modo de desenvolvimento (true/false)
DEVELOPMENT_MODE=false

# Habilitar hot reload (true/false)
HOT_RELOAD=false

# =============================================================================
# CONFIGURAÇÕES DE TESTE
# =============================================================================

# Habilitar modo de teste (true/false)
TEST_MODE=false

# Mock de APIs para testes (true/false)
MOCK_APIS=false

# =============================================================================
# CONFIGURAÇÕES DE DEPLOYMENT
# =============================================================================

# Ambiente (development, staging, production)
ENVIRONMENT="development"

# Versão da aplicação
APP_VERSION="3.0.0"

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================

# Habilitar backup automático (true/false)
ENABLE_AUTO_BACKUP=false

# Intervalo de backup (em horas)
BACKUP_INTERVAL=24

# Retenção de backups (em dias)
BACKUP_RETENTION=7 