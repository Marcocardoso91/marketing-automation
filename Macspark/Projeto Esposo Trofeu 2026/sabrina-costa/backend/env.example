CPC_MAX=0.70
CPM_MAX=10.0
FREQUENCY_MAX=3.0
COST_PER_FOLLOWER_MAX=1.30

# =================================
# EVOLUTION API (WhatsApp)
# =================================
EVOLUTION_API_URL=https://evolution.macspark.dev
EVOLUTION_API_KEY=your_evolution_api_key
WHATSAPP_INSTANCE=sabrina-instance
