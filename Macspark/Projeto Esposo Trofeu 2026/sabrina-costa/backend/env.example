# Token JWT utilizado por automações (n8n) para acessar a API
API_SERVICE_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_token_here

# =================================
# API SERVER
# =================================
PORT=3000
NODE_ENV=development

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=http://localhost:3000,https://dashboard-sabrina.vercel.app

# =================================
# WEBHOOK CONFIGURATION
# =================================
WEBHOOK_SECRET=webhook_secret_token_change_in_production

# =================================
# n8n CONFIGURATION
# =================================
N8N_API_URL=https://fluxos.macspark.dev
N8N_API_KEY=your_n8n_api_key_here

# Overrides opcionais para thresholds (utilizados pelos workflows)
