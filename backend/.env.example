# =============================================================================
# MARKETING AUTOMATION API - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
#
# INSTRUÇÕES:
# 1. Copie este arquivo para .env: cp .env.example .env
# 2. Preencha com suas credenciais reais
# 3. NUNCA faça commit do arquivo .env
#
# =============================================================================

# -----------------------------------------------------------------------------
# FACEBOOK API - OBRIGATÓRIO
# -----------------------------------------------------------------------------
# Obtenha em: https://developers.facebook.com/apps
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_AD_ACCOUNT_ID=act_your_account_id_here

# -----------------------------------------------------------------------------
# DATABASE - OBRIGATÓRIO
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/facebook_ads_ai

# -----------------------------------------------------------------------------
# REDIS - OBRIGATÓRIO
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# CELERY - OBRIGATÓRIO
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# SECURITY - OBRIGATÓRIO
# -----------------------------------------------------------------------------
# Gere com: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# -----------------------------------------------------------------------------
# N8N INTEGRATION - OPCIONAL
# -----------------------------------------------------------------------------
# Configure em: https://fluxos.macspark.dev
N8N_WEBHOOK_URL=https://fluxos.macspark.dev/webhook
N8N_API_URL=https://fluxos.macspark.dev/api/v1
N8N_API_KEY=your_n8n_api_key_here

# -----------------------------------------------------------------------------
# EXTERNAL NOTIFICATIONS - OPCIONAL
# -----------------------------------------------------------------------------
# Slack Webhook (para alertas)
SLACK_WEBHOOK_URL=

# WhatsApp (para notificações críticas)
WHATSAPP_ALERT_PHONE=

# -----------------------------------------------------------------------------
# NOTION INTEGRATION - OPCIONAL
# -----------------------------------------------------------------------------
NOTION_API_TOKEN=
NOTION_DATABASE_ID=

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_NAME=Facebook Ads AI Agent
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
